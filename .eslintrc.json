{
  "parser": "babel-eslint",
  "env": {
    "commonjs": true,
    "es6": true
  },
  "extends": [
    "airbnb-base"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "impliedStrict": true,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "no-mixed-operators": 0,
    "no-use-before-define": 0,
    "max-len": 0,
    "object-curly-newline": 0
  },
  "settings": {
    "import/resolver": "babel-root-import"
  }
}

{
  "type": "object",
  "required": ["fields", "files"],
  "properties": {
    "fields": {
      "type": "object",
      "required": ["meta"],
      "properties": {
        "meta": {
          "type": "string"
        }
      }
    },
    "files": {
      "type": "object",
      "required": "uploads",
      "properties": {
        "uploads": {
          "type": "array",
          "minItems": 1,
          "maxItems": 1,
          "items": {
            "type": "object",
            "required": ["path", "name", "type"],
            "properties": {
              "path": {
                "type": "string"
              },
              "name": {
                "type": "string"
              },
              "type": {
                "enum": ["image/jpeg", "image/png"]
              }
            }
          }
        }
      }
    }
  }
}

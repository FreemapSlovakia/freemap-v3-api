{
  "type": "object",
  "required": ["fields", "files"],
  "properties": {
    "fields": {
      "type": "object",
      "required": ["meta"],
      "properties": {
        "meta": {
          "type": "object",
          "required": ["position"],
          "properties": {
            "position": {
              "type": "object",
              "required": ["lat", "lon"],
              "properties": {
                "lat": {
                  "type": "number"
                },
                "lon": {
                  "type": "number"
                }
              }
            },
            "name": {
              "type": "string"
            },
            "description": {
              "type": "string"
            },
            "timestamp": {
              "type": "string",
              "format": "date-time"
            }
          }
        }
      }
    },
    "files": {
      "type": "object",
      "required": ["image"],
      "image": {
        "type": "object",
        "required": ["path", "name", "type"],
        "properties": {
          "path": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "type": {
            "const": ["image/jpeg"]
          }
        }
      }
    }
  }
}
